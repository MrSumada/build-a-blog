<article class="post">
    <div class="single-post-title">
        <div class="title-name">
            <a href="/post/{{id}}">{{title}}</a>
            <p>by <strong>{{user.username}}</strong></p>
        </div>
        <p class="date-info">{{format_date created_at}}</p>
    </div>
    <div class="blog_text">
        <p>{{blog_text}}</p>
    </div>
</article>