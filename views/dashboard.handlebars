<section class="post-create">
    <h2>Create New Blog Entry</h2>

    <form class="new-post-form">
        <div>
            <label for="post-title">Title</label>
            <input type="text" id="post-title" name="post-title" />
        </div>
        <div>
            <label for="blog-text">Post</label>
            <textarea id="blog-text"></textarea>
        </div>
        <button type="submit" class="btn">Create</button>
    </form>
</section>

{{#if posts.length}}
<section>
    <h2 class="post-title">Your Posts</h2>

    <ol class="post-list">
        {{#each posts as |post|}}
        <li>
            {{> post-info post }}
            <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit Post</a>
        </li>
        {{/each}}
    </ol>
</section>
{{/if}}

{{#if comments.length}}
<section>
    <h2>Your Comments</h2>

    <ol class="post-list">
        {{#each comments as |comment|}}
        <li>
            {{> comments comment }}
            <a href="/dashboard/edit/{{comment.id}}" class="edit-link">Edit Comment</a>
        </li>
        {{/each}}
    </ol>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>