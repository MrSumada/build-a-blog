<div class="single-post">
    <article class="post">
        <div class="title">
            <div class="title-name">
                <h3>{{post.title}}</h3>
                <p>by <strong>{{post.user.username}}</strong></p>
            </div>
            <p class="date-info">{{format_date post.created_at}}</p>
        </div>
        <div class="blog_text">
            <p>{{post.blog_text}}</p>
        </div>
    </article>

{{> comments post.comments }}

    {{!-- add comment forms in logged in --}}
    {{#if loggedIn}}
    <form class="comment-form">
        <div>
            <textarea name="comment-body"></textarea>
        </div>

        <div>
            <button type="submit">add comment</button>
        </div>
    </form>
    {{/if}}

    {{!-- Add login reminder if logged out --}}
    {{#unless loggedIn}}
    <p class="login-reminder">Please login to leave a comment</p>
    {{/unless}}
</div>



{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}


